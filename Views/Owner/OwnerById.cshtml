@using PetCare.Modules.OwnerModule.DTO
@model OwnerDTO

<hr/>

<section style="background-color: #eee;">
  <div class="container py-5">

    <div class="row">
      <div class="col-lg-4">
        <div class="card mb-4">
          <div class="card-body text-center">
            <h5 class="my-3">@Html.DisplayFor(owner => owner.LastName), @Html.DisplayFor(owner => owner.FirstName)</h5>
            <p class="text-muted mb-4">@Html.DisplayFor(owner => owner.Birthdate)</p>
            <div class="d-flex justify-content-center mb-2">
              <button type="button" class="btn btn-primary">Edit</button>
              <button type="button" class="btn btn-outline-danger ms-1">Remove</button>
            </div>
          </div>
        </div>

      </div>
      <div class="col-lg-8">
        <div class="card mb-4">
          <div class="card-body">
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0">Email</p>
              </div>
              <div class="col-sm-9">
                <p class="text-muted mb-0">@Html.DisplayFor(owner => owner.Email)</p>
              </div>
            </div>
            <hr>
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0">Mobile</p>
              </div>
              <div class="col-sm-9">
                <p class="text-muted mb-0">@Convert.ToInt64(@Model.PhoneNumber).ToString("(###) ###-####")</p>
              </div>
            </div>
            <hr>
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0">Address</p>
              </div>
              <div class="col-sm-9">
                <p class="text-muted mb-0">@Model.GetFullAddress()</p>
              </div>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-md-12">
            <div class="card mb-4 mb-md-0">
              <div class="card-body">

                <table class="table">
                <thead>
                    <tr>
                    <th scope="col">Name</th>
                    <th scope="col">Type</th>
                    <th scope="col">Birthdate</th>
                    <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var pet in Model.Pets!)
                    {
                        <tr>
                        <th scope="row">@pet.Name</th>
                        <td>@pet.PetTypeName</td>
                        <td>@Html.DisplayFor(owner => pet.Birthdate)</td>
                        <td><button class="btn btn-outline-danger">X</button></td>
                        </tr>
                    }
                </tbody>
                </table>

              </div>
            </div>
          </div>
      </div>
    </div>
  </div>
</section>
<hr/>